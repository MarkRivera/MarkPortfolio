<div class="login">
  <div class="container">
    <div class="form">

    <h1>Sign up</h1>

    <%= form_for @admin do |f| %>
      <%= f.label :email %>
      <%= f.text_field :email %>

      <%= f.label :password %>
      <%= f.text_field :password %>

      <%= f.label :password_confirmation %>
      <%= f.text_field :password_confirmation %>

      <%= f.submit "Sign Up" %>
    <% end %>

    </div>
  </div>
</div>
